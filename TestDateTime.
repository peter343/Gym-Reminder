import com.sun.org.apache.xpath.internal.SourceTree;

import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Calendar;

import java.util.Date;

/**
 * Created by andre_000 on 10/2/2015.
 */
public class TestDateTime {

    private int getDayOfWeek(){
        Calendar cal = Calendar.getInstance();
        int day = cal.get(Calendar.DAY_OF_WEEK);

        if(day == cal.MONDAY)
            return 0;
        else if(day == cal.TUESDAY)
            return 1;
        else if (day == cal.WEDNESDAY)
            return 2;
        else if (day == cal.THURSDAY)
            return 3;
        else if (day == cal.FRIDAY)
            return 4;
        else if (day == cal.SATURDAY)
            return 5;
        else if (day == cal.SUNDAY)
            return 6;
        else return -1;
    }

    public String showDayDateTime(int day){
        DateFormat dateFormat = new SimpleDateFormat("yyyy/MMMMMMMMM/dd HH:mm");
        Date date = new Date();
        System.out.println();
String result = "";
        switch(day) {
            case 0:
                result =  "Today is Monday, " + dateFormat.format(date);
            case 1:
                result =  "Today is Tuesday, " + dateFormat.format(date);
            case 2:
                result =  "Today is Wednesday, " + dateFormat.format(date);
            case 3:
                return "Today is Thursday, " + dateFormat.format(date);
            case 4:
                return "Today is Friday, " + dateFormat.format(date);
            case 5:
                return "Today is Saturday, " + dateFormat.format(date);
            case 6:
                return "Today is Sunday, " + dateFormat.format(date);
            case -1:
                return null;

        }

    }
    public static void main(String[] args){

        TestDateTime test = new TestDateTime();
        System.out.println("" + test.getDayOfWeek());
    }


}
